@page
@model DeliveryAppProject.Pages.OrdersModel
@{
}

<style>
    .order-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .order-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
        transition: transform 0.2s;
    }

    .order-card:hover {
         transform: scale(1.05);
    }

    .order-card img {
        width: 100%;
        border-radius: 10px;
        height: auto;
    }

    .order-card h3 {
        margin: 10px 0;
        font-size: 1.2em;
    }

     .order-card p {
         margin: 5px 0;
     }
</style>

<div class="order-container">
    @foreach (var order in Model.Orders)
    {
        <div class="order-card">
            <img alt="picture" src="@order.Image" />
            <h3>@order.Name</h3>
            <p>@order.Email</p>
            <p style="color:crimson;">@order.Price</p>
        </div>
    }
</div>
